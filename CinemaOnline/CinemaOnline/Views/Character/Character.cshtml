@model IEnumerable<Likovi>
@{
    ViewBag.Title = "Character";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-10 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Ime)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Ime)</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-controller="Character" asp-action="Edit" asp-route-id="@item.LikoviId"><i class="bi bi-pencil"></i></a>
                            <a class="btn btn-outline-danger" asp-controller="Character" asp-action="ObrisiLikove" asp-route-id="@item.LikoviId"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-white">
            <a class="btn btn-outline-success" asp-controller="Character" asp-action="DodajLikove">Add new character</a>
        </div>
    </div>
</div>
