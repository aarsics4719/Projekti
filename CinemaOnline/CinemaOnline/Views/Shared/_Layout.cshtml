<!DOCTYPE html>
<html lang="en">
<head>
    <title>Cinema Online</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
</head>
<body>
    <div class="container p-2 my-2">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Cinema Online</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="mr-sm-2">
                        <a class="nav-link text-white" asp-controller="Movies" asp-action="Movies"><i class="bi bi-camera-reels"></i> Filmovi</a>
                    </li>
                    @if(ViewBag.ShowDropdown == true)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" id="dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="bi bi-gear"></i> Admin panel
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdown">
                                <a class="dropdown-item" asp-controller="Actors" asp-action="Glumci">Glumci</a>
                                <a class="dropdown-item" asp-controller="Character" asp-action="Likovi">Likovi</a>
                                <a class="dropdown-item" asp-controller="Movies" asp-action="MoviesAdmin">Filmovi</a>
                                <a class="dropdown-item" asp-controller="Rental" asp-action="RentalAdmin">Rentirano</a>
                                <a class="dropdown-item" asp-controller="Rental" asp-action="RatingAdmin">Ocene</a>
                            </div>
                        </li>
                    }
                </ul>
                <form class="form-inline my-2 my-lg-0" asp-controller="Movies" asp-action="Search" method="get">
                    <input class="form-control mr-sm-2" name="search" value="@ViewData["Filter"]" type="search" placeholder="Film,Žanr.." aria-label="Search">
                    <button style="color: white;" class="btn btn-outline-secondary my-2 my-sm-0" type="submit">Pretraga</button>
                </form>
                @if(ViewBag.User == null)
                {
                    
                <div class="d-flex flex-row-reverse">
                    <div class="mr-sm-2">
                        <a class="nav-link text-white" asp-controller="Account" asp-action="Register">Registracija</a>
                    </div>
                </div>
                <div class="d-flex flex-row-reverse">
                    <div class="mr-sm-2">
                        <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Prijava</a>
                    </div>
                </div>
                } 
                else
                {
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" id="dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                               <i class="bi bi-person-circle"></i>@ViewBag.User.Email
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdown">
                                <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Odjava</a>
                                <a class="dropdown-item" asp-controller="Rental" asp-action="UserRental">Rentirani filmovi</a>
                            </div>
                        </li>
                    </ul>
                }
            </div>
        </nav>
    </div>
    <div class="container">
        @RenderBody()
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>
