@model CinemaOnline.Models.Korisnici

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <style>
        .login {
            margin: 0 auto;
            max-width: 500px;
            padding-top: 100px;
        }
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>Sign In</title>
</head>
<body>
    <div class="row">
        <div class="col-md-6 login">
            <div class="display-4 text-center mb-3">Prijava</div>
            <div class="card bg-dark">
                <div class="card-body">
                    <form asp-controller="Account" asp-action="Login" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <div class="col-md-6 offset-md-3 text-center">
                                    <label asp-for="Email" class="text-light">Email</label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-6 offset-md-3 text-center">
                                    <label asp-for="Password" class="text-light">Šifra</label>
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <div class=" col-md-6 offset-md-4">
                                    <button type="submit" class="btn btn-outline-light text-light">Prijavi se!</button>
                                </div>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
