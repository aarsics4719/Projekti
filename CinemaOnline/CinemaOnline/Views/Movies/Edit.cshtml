@model Filmovi;

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4 offset-4">
        <h3 class="text-center">Edit @Model.Ime ?</h3>
        <form method="post" asp-controller="Movies" asp-action="Edit" asp-route-id="@Model.FilmId">
            <div class="form-group">
                <label asp-for="Ime" class="control-label"></label>
                <input asp-for="Ime" class="form-control" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zanr" class="control-label"></label>
                <input asp-for="Zanr" class="form-control" />
                <span asp-validation-for="Zanr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ocena" class="control-label"></label>
                <input asp-for="Ocena" class="form-control" />
                <span asp-validation-for="Ocena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Godina" class="control-label"></label>
                <input asp-for="Godina" class="form-control" />
                <span asp-validation-for="Godina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trajanje" class="control-label"></label>
                <input asp-for="Trajanje" class="form-control" />
                <span asp-validation-for="Trajanje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cena" class="control-label"></label>
                <input asp-for="Cena" class="form-control" />
                <span asp-validation-for="Cena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Slika" class="control-label"></label>
                <input asp-for="Slika" class="form-control" />
                <span asp-validation-for="Slika" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GlumciId" class="control-label">Glumci</label>
                <select asp-for="GlumciId" asp-items="@(new SelectList(ViewBag.Actors, "GlumciId", "Ime"))" class="form-control" multiple></select>
            </div>
            <div class="form-group">
                <label asp-for="LikoviId" class="control-label">Likovi</label>
                <select asp-for="LikoviId" asp-items="@(new SelectList(ViewBag.Characters, "LikoviId", "Ime"))" class="form-control" multiple></select>
            </div>
            <div class="form-group text-center">
                <button class="btn btn-info" type="submit"><i class="bi bi-pencil">Edit</i></button>
            </div>
        </form>
    </div>
</div>