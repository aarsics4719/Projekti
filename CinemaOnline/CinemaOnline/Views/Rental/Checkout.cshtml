@model CinemaOnline.Models.RentalViewModel

@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <h3 class="text-center">Da li ste sigurni da želite da rentirate @Model.Ime?</h3>
    </div>
    <div class="col-md-4 offset-4">
        <form method="post" asp-controller="Rental" asp-action="Checkout" asp-route-id="@Model.FilmId">
            <input type="hidden" name="FilmId" value="@Model.FilmId" />
            <div class="form-group text-center">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control text-center" readonly />
            </div>
            <div class="form-group text-center">
                <label asp-for="Ime" class="control-label"></label>
                <input asp-for="Ime" class="form-control text-center" readonly />
            </div>
            <div class="form-group text-center">
                <label asp-for="Datum" class="control-label"></label>
                <input type="date" asp-for="Datum" class="form-control text-center" value="@Model.Datum.Value.ToString("yyyy-MM-dd")" readonly />
            </div>
            <div class="form-group text-center">
                <label asp-for="Cena" class="control-label"></label>
                <input asp-for="Cena" class="form-control text-center" readonly />
            </div>
            <div class="form-group text-center">
            </div>
            <div class="form-group text-center">
                <button class="btn btn-success" type="submit"><i class="bi bi-success">Rent it!</i></button>
            </div>
        </form>
    </div>
</div>
