@model IEnumerable<Glumci>
@{
    ViewBag.Title = "Actors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-10 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Ime)</th>
                    <th>@Html.DisplayNameFor(model => model.DatumRodjenja)</th>
                    <th>@Html.DisplayNameFor(model => model.ZemljaPorekla)</th>
                    <th>@Html.DisplayNameFor(model => model.Nagrade)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Ime)</td>
                        @{
                            string parametar = item.DatumRodjenja.Value.ToString("d MMM yyyy");
                        }
                        <td class="align-middle">@Html.DisplayFor(modelItem => parametar)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.ZemljaPorekla)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Nagrade)</td>
                        <td class="align-middle">
                            <a  class="btn btn-outline-danger" asp-controller="Actors" asp-action="ObrisiGlumca" asp-route-id="@item.GlumciId"><i class="bi bi-trash"></i></a>
                            <a  class="btn btn-outline-info" asp-controller="Actors" asp-action="Edit" asp-route-id="@item.GlumciId"><i class="bi bi-pencil"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="text-white">
        <a class="btn btn-outline-success" asp-controller="Actors" asp-action="DodajGlumca">Add new actor</a>
    </div>
</div>
