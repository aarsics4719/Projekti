@model CinemaOnline.Models.Glumci

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4 offset-4">
        <h3 class="text-center">Da li ste sigurni da želite da obrišete glumca @Model.Ime ?</h3>
        <form method="post" asp-controller="Actors" asp-action="PotvrdiBrisanje" asp-route-id="@Model.GlumciId">
            <div class="form-group text-center">
                <label asp-for="Ime" class="control-label"></label>
                <input asp-for="Ime" class="form-control" readonly/>
            </div>
            <div class="form-group text-center">
                <label asp-for="DatumRodjenja" class="control-label"></label>
                <input asp-for="DatumRodjenja" class="form-control" readonly/>
            </div>
            <div class="form-group text-center">
                <label asp-for="ZemljaPorekla" class="control-label"></label>
                <input asp-for="ZemljaPorekla" class="form-control" readonly />
            </div>
            <div class="form-group text-center">
                <label asp-for="Nagrade" class="control-label"></label>
                <input asp-for="Nagrade" class="form-control" readonly />
            </div>
            <div class="form-group text-center">
                <button class="btn btn-danger" type="submit"><i class="bi bi-trash">Delete</i></button>
            </div>
        </form>
    </div>
</div>